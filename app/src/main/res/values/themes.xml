<resources>
    <!-- Base application theme. -->
    <style name="Theme.TimeForATrip" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.AppTheme.LikeCheckBox"
        parent="Widget.Material3.Button.IconButton.Outlined">
        <item name="iconTint">@color/like_checkbox_tint</item>
        <item name="minHeight">@dimen/like_dimen</item>
        <item name="minWidth">@dimen/like_dimen</item>
    </style>

</resources>